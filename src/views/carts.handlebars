<div
  class="container d-flex flex-column justify-content-center align-items-center"
  style="height: 80vh;"
>
  <div class="mb-3">
    <h1>CARTS</h1>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    {{#each carts}}
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
          <h6 class="card-title">Carrito con ID: {{this._id}}</h6>
          <p class="card-text">Productos en el carrito:
            {{this.products.length}}</p>
          <a href="/cart/{{this._id}}" class="btn btn-primary">Ver carrito</a>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="mt-3">
    <a class="btn btn-secondary" href="/products" role="button">Volver a products</a>
  </div>
</div>